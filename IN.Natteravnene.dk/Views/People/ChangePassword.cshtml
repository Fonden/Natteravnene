@model LocalPasswordModel
@section pagescripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/jcrop")
}
<div class="page-header position-relative">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-small btn-primary">
            <i class="ace-icon @Icons.BackIcon icon-only"></i>
        </a> @General.ChangePassword
    </h1>
</div>

@using (Html.BeginForm("ChangePassword", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
   
    @Html.Partial("~/Views/Shared/_FormSummery.cshtml");

    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 control-label no-padding-right" })

            <div class="col-sm-8">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "col-xs-1 col-sm-2" })
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
        </div>

        <div class="space-4"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 control-label no-padding-right" })

            <div class="col-sm-8">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "col-xs-1 col-sm-2" })
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>

        <div class="space-4"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label no-padding-right" })

            <div class="col-sm-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-xs-1 col-sm-2" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="space-4"></div>

    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="icon-ok bigger-110"></i>
                @General.Save
            </button>

            &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="icon-undo bigger-110"></i>
                @General.Reset
            </button>
        </div>
    </div>
}
