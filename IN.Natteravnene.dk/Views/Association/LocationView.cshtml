@model Location

@section pagescripts {
    <script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
}

@section inlinescripts {
    <script type="text/javascript">
    //<![CDATA[
    google.maps.event.addDomListener(window, 'load', Initialize);

    // global "map" variable
    var map = null;
    var marker = null;

    function Initialize() {

        // the location of the initial pin
        var myLatlng = new google.maps.LatLng(@Model.latstring, @Model.lngstring);
        // create the map
        var myOptions = {
            zoom: 15,
            center: myLatlng,
            mapTypeControl: true,
            mapTypeControlOptions: { style: google.maps.MapTypeControlStyle.DROPDOWN_MENU },
            navigationControl: true,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }

        map = new google.maps.Map(document.getElementById("map-canvas"), myOptions);

        // establish the initial marker/pin
        var image = '/images/googlepins/pin2.png';
        marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            //icon: image,
            title: "@Model.Name"
        });

        var options = {
            strokeColor: '#f0ad4e',
            strokeOpacity: 1.0,
            strokeWeight: 1,
            fillColor: '#f0ad4e',
            fillOpacity: 0.5,
            map: map,
            center: myLatlng,
            radius: 800,
            title: "@Model.Name"
        };

        circle = new google.maps.Circle(options);

    }

    //]]>
    </script>
}
<div class="page-header position-relative">
    <h1>
        <a href="@Html.Encode(Request.UrlReferrer.ToString())" class="btn btn-small btn-primary">
            <i class="ace-icon @Icons.BackIcon icon-only"></i>
        </a> @Model.Name (@Model.ShortName)
    </h1>
</div>

<div class="row">
    <div class="col-xs-5">
        <p>@Model.Description</p>
    </div>
    <div class="col-xs-7">
        <div class="mapaspect">
            <div id="map-canvas" class="map-canvas"></div>
            </div>
        </div>
</div>



