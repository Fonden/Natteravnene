@model SIViewModel
<div class="page-header position-relative">
    <h1>@General.SeniorInstructor</h1>
</div>
<div class="tabbable">
<ul class="nav nav-tabs padding-16">
    <li class="active">
        <a data-toggle="tab" href="#basic">
            <i class="green icon-edit bigger-125"></i>
            @General.SeniorInstructorOverview
        </a>
    </li>
    <li>
        <a data-toggle="tab" href="#minutes">
            <i class="green icon-edit bigger-125"></i>
            @General.SeniorInstructorMinutes
        </a>
    </li>
</ul>

<div class="tab-content profile-edit-tab-content">
    <div id="basic" class="row tab-pane in active">
        <div class="col-sm-5">
            <div class="widget-box transparent">
                <div class="widget-header widget-header-flat">
                    <h4 class="widget-title lighter">
                        <i class="ace-icon fa fa-star orange"></i>
                        @General.SeniorInstructorAssociations
                    </h4>

                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main no-padding">
                        <table class="table table-bordered table-striped">
                            <thead class="thin-border-bottom">
                                <tr>
                                    <th>
                                        <i class="ace-icon fa fa-caret-right blue"></i>@DomainStrings.AssociationName
                                    </th>

                                    <th>
                                        <i class="ace-icon fa fa-caret-right blue"></i>@DomainStrings.NetworkName
                                    </th>

                                    <th class="hidden-480">
                                        <i class="ace-icon fa fa-caret-right blue"></i>status
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Association A in Model.Associations)
                                { 
                                <tr>
                                    <td>@A.Name</td>

                                    <td>
                                        @A.Network.NetworkName
                                    </td>

                                    <td>
                                        @A.Status.DisplayName()
                                    </td>
                                </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div><!-- /.widget-main -->
                </div><!-- /.widget-body -->
            </div><!-- /.widget-box -->
        </div>
        
    </div>
    <div id="associations" class="row tab-pane">

        
    </div>
    <div id="causes" class="row tab-pane">

        
    </div>
</div>
</div>