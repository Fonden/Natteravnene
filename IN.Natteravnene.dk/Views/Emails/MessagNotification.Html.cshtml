                                    <br><br>
                                    <!--<a href="@Model.Link">Læs den online på linket her</a>
                                    <br><br>-->
                                    <hr />
                                    @Html.Raw(Model.Message)                                    
                                    <br><br>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
