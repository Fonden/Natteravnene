@model TrialFormModel
<h1>Prøvetur med Natteravnene?</h1>
<p>Din indsats gør en forskel! Prøv en uforpligtende tur i den gule jakke!</p>
@using (Ajax.BeginForm("BlivNatteravn","Local", new AjaxOptions { UpdateTargetId = "ajaxblivnatteravn", HttpMethod = "POST", InsertionMode = InsertionMode.Replace }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary()
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Fornavn" })
               
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Efternavn" })
            </div>
        </div>
        <div class="form-group col-xs-12">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Telefonnummer" })
        </div>
        <div class="form-group col-xs-12">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
        <div class="form-group  col-xs-6">
           @Html.LabelFor(m => m.Zip)
            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control", placeholder = "Postnummer" })
        </div>
            <button type="submit" class="btn btn-default pull-right">Send</button>
        <div class="spacer"></div>
    </div>
} 