@model Person
@section pagescripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/jcrop")
}
<div class="page-header position-relative">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-small btn-primary">
            <i class="ace-icon @Icons.BackIcon icon-only"></i>
        </a> @General.PersonSetup
    </h1>
</div>

@using (Html.BeginForm("Setup", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.PersonID)

    @Html.Partial("~/Views/Shared/_FormSummery.cshtml");

    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.ListLines, new { @class = "col-sm-2 control-label no-padding-right" })

            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.ListLines, new { @class = "col-xs-1 col-sm-1" })
                @Html.ValidationMessageFor(m => m.ListLines)
            </div>
        </div>

        <div class="space-4"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.CurrentAssociation, new { @class = "col-sm-2 control-label no-padding-right" })

            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.CurrentAssociation, new SelectList(ViewBag.Associations, "Value", "Text", Model.CurrentAssociation))
            </div>
        </div>

        <div class="space-4"></div>


       



    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="icon-ok bigger-110"></i>
                @General.Save
            </button>

            &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="icon-undo bigger-110"></i>
                @General.Reset
            </button>
        </div>
    </div>
}

