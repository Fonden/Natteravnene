@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="pagehero">
    <img src="@Url.Content(ViewBag.PageImage)" class="img-responsive" />
    <h1>@Html.Raw(ViewBag.Title)</h1>
</div>
<div id="submenu" class="navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".submenu">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse submenu">
            <ul class="nav navbar-nav">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Konceptet" ? "active" : "")">@Html.ActionLink("Natteravnekonceptet", "Konceptet", "OmNatteravnene")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Fakta" ? "active" : "")">@Html.ActionLink("Fakta", "Fakta", "OmNatteravnene")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Regler" ? "active" : "")">@Html.ActionLink("De 5 gyldne regler", "Regler", "OmNatteravnene")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Logo" ? "active" : "")">@Html.ActionLink("Logo", "Logo", "OmNatteravnene")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Landssekretariatet" ? "active" : "")">@Html.ActionLink("Landssekretariatet", "Landssekretariatet", "OmNatteravnene")</li>
            </ul>
        </div>
    </div>
</div>

<div class="body-content">
   @RenderBody()
</div>